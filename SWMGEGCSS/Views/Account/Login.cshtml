
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesion SWMGEGCSS</title>
    <link rel="stylesheet" href="~/Content/StyleSesión/Style.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <!--<div class="text-center imgemrpresa position-relative">
            <img class="img-fluid rounded" src="~/images/empresa.png" />
        </div>-->
    <div class="relative bordersesionrelative">
        <div class="absoluto">
            <img class="img-fluid rounded" src="~/images/empresa.png" />
        </div>
    </div>
        <div class="container">
            <div class="text-center position">
                <div class="bordersesion">
                    <div class="row justify-content-center mt-3" style="margin-top:12% !important">
                        <div class="col-sm-4 col-12 col-md-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="user">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </div>
                                <input type="text" class="form-control" placeholder="Ingrese nombre de usuario" name="username" id="username" aria-describedby="user" />
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-sm-4 col-12 col-md-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="pass">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </div>
                                <input type="password" class="form-control" placeholder="Ingrese Contraseña" name="password" id="password" aria-describedby="pass" />
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3 mb-3">
                        <div class="col-sm-4 col-12 col-md-4 text-left">
                            <button type="submit" class="btn btn-success buttonsesion">
                                <i class="fa fa-share-square"></i>
                                Iniciar Sesión
                            </button>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    }
</body>
</html>
