@model SWMGEGCSS.Models.TareasAsignadasViewModel
@{/*
    Layout = null;*/
}

<div class="modal fade" id="ModificarObservacion" tabindex="-1" role="dialog" aria-labelledby="#ModificarObservacion" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="text-center font-weight-bolder">
                Responder observación
            </div>
            <div class="modal-body">
                <div class="row mt-2 pl-2">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                                Respuesta a la observación:
                            </label>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.observacion_por_actividad.obs_act_usuario, new
                            {
                                htmlAttributes = new { @class = "text-center form-control bg-white", @id="observacion_usuario" }
                            })
                        </div>
                        <div id="error_observacion_usuario" class="errordiv"></div>
                    </div>
                </div>

                <div class="mt-4 mb-4">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-6">
                            <button type="button" class="btn btn-danger rounded-pill btnActualizarObservacion" style="color:white !important">
                                <i class="fa fa-check-circle" style="color:white !important"></i>
                                Registrar
                            </button>
                        </div>
                        <div class="col-sm-6 col-md-6 col-6">
                            <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal">
                                <i class="fa fa-arrow-left"></i>
                                Cancelar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

