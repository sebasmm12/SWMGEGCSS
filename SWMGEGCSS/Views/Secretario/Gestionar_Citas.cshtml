@model SWMGEGCSS.Models.GestionarCitasViewModel
@{
    ViewBag.Title = "Gestionar_Citas";
    var list_citas = Model.listCitas;
}



<h2 class="ml-3">Gestionar Citas</h2>

<div class=" row mt-4 ml-2">
    <div class="col-7">
        <a href="@Url.Action("Registrar_Cita","Secretario")" class="btn btn-primary mx-md-auto col-6">
            <i class="fa fa-plus-circle"></i>
            Registrar Cita
        </a>
    </div>
    <div class="col-3">
        <select class="custom-select" id="estado" name="estado">
            <option value="1">Pendientes</option>
            <option value="2">Cancelados</option>
            <option value="3">No realizados</option>
        </select>
    </div>
    <div class="col-2">
        <button class="btn btn-primary rounded-pill" id="Buscar">
            <i class="fa fa-search"></i>
        </button>
    </div>
</div>





@Html.Partial("_ListaCitas", Model)
@Html.Action("_verDetalles", "Secretario")
@Html.Action("_Eliminar_Cita", "Secretario")


<link href="~/Content/style-autocomplete/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/PagedList.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Scripts/sweetalert/sweetalert.js"></script>
    <script src="~/Scripts/Scripts_TP/MAURICIO/scriptsGestionarCita.js"></script>
    <script src="~/Scripts/script-autocomplete/jquery-ui-min.js"></script>
}



