@model SWMGEGCSS.Models.SolicitudViewModel
@{
    ViewBag.Title = "Contactenos";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}
<script src="https://maps.google.com/maps/api/js?sensor=false&libraries=places&key=AIzaSyCofVlKoUkQKw8ksqEh9F5LownHv6BjpRc"></script>
<div class="container">
    @using (Html.BeginForm("Contactenos","Client"))
    {
        <div class="row mt-4">
            <div class="col-12 col-sm-6 col-md-6">
                <div>
                    <label class="font-weight-bolder">
                        Ponte en contacto con nosotros para atender
                        cualquier consulta sobre nuestros servicios
                    </label>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-3 col-md-3 text-center">
                        <i class="fab fa-facebook-square mt-2" style="font-size:30px!important;color:#f7f2f2">
                        </i>
                    </div>
                    <div class="col-12 col-sm-3 col-md-3 text-center">
                        <i class="fab fa-youtube mt-2" style="font-size:30px!important;color:red;"></i>
                    </div>
                    <div class="col-12 col-sm-3 col-md-3 text-center">
                        <i class="fab fa-instagram mt-2" style="font-size:30px!important;color:#5c4a1e">
                        </i>
                    </div>
                    <div class="col-12 col-sm-3 col-md-3 text-center">
                        <i class="fab fa-twitter mt-2" style="font-size:30px!important;color:#19e4d7">
                        </i>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6">
                <div class="mt-2">
                    <label for="names">
                        Nombres y Apellidos:
                    </label>
                    @Html.EditorFor(model => model.Solicitud.names,new { htmlAttributes= new {@class="text-center form-control" } })         
                </div>
                <div class="mt-2">
                    <label for="correoE">
                        Correo Electrónico:
                    </label>
                    @Html.EditorFor(model => model.Solicitud.correoE, new { htmlAttributes = new { @class = "text-center form-control" } })
                </div>
                <div class="mt-2">
                    <label for="asunto">
                        Asunto:
                    </label>
                    @Html.EditorFor(model => model.Solicitud.asunto, new { htmlAttributes = new { @class = "text-center form-control" } })
                </div>
                <div class="mt-2">
                    <label for="mensaje">
                        Deja tu mensaje:
                    </label>
                    @Html.TextArea("Solicitud.mensaje", htmlAttributes: new { @class = "text-center form-control" })
              
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary" id="solicitud">
                        <i class="fa fa-paper-plane"></i>
                        Enviar Solicitud
                    </button>
                </div>
            </div>
        </div>
    }
</div>
<div class="mt-2" id="map">

</div>
<div class="mt-2" id="driving-directions">

</div>

