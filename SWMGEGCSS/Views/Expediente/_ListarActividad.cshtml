
@model SWMGEGCSS.Models.ExpedienteViewModel
@{ 
    Layout = null;
    var Actividades_Total = Model.ActividadModel.list_Actividades;
    var Actividades_Desarrollar = Model.ActividadModel.list_Actividades_Desarrollar;
    var Actividades_Planeadas = Model.ActividadModel.list_Actividades_Planeadas;
    var count = 0;
    var p = 0;
    
}
    <table class="table table-bordered">
        <thead class="bg-success">
            <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Nombre de la Actividad</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acciones del Proyecto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Actividades_Total)
            {
                count = count + 1;  
                 var exp_id = Actividades_Desarrollar.ElementAt(0).exp_id;
            <tr class="text-center">
                <th scope="row">@count</th>
                @if (p!= Actividades_Desarrollar.Count)
                {
                 var evaluar0 = Actividades_Desarrollar.ElementAt(p);
                p = p + 1;
                var evaluar1 = Actividades_Planeadas.Find(r=>r.act_plan_nombre==evaluar0.act_desa_nombre);
                var evaluar = Actividades_Total.Find(r => r.act_id == evaluar1.act_id);
               
                    <td>@evaluar1.act_plan_nombre</td>
                    <td>@evaluar1.act_plan_descripcion</td>
                    <td>
                        <button class="btn btn-danger btnSubModal" data-id-target="@evaluar1.act_plan_nombre" data-exp-target="@evaluar0.exp_id" data-url="@Url.Action("EliminarActividad","Expediente")">
                            <i class="fa fa-times-circle"></i>
                            Eliminar Actividad
                        </button>
                    </td>
                }
                else
                {
                    <td>@item.act_nombre</td>
                    <td>@item.act_descripcion</td>
                    <td>
                        <button class="btn btn-success btnSubModal" data-id-target="@item.act_nombre" data-exp-target="@exp_id" data-url="@Url.Action("AñadirActividad","Expediente")">
                            <i class="fa fa-check-circle"></i>
                            Ingresar Actividad
                        </button>
                    </td>
                }
            </tr>

            }
        </tbody>
    </table>