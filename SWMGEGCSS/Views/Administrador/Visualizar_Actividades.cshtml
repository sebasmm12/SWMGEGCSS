@model SWMGEGCSS.Models.VisualizarTrabajadoresViewModel
@{
    var list_actividades = Model.IPlist_actividades_usuario;
    var count = 0;
    Layout = null;
}
<div id="tableExp">
    <div class="table-responsive form-bar mt-5">
        <div class="row mt-4">
            <div class="col-12 col-sm-12 col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="bg-success">
                            <tr class="text-center">
                                <th scope="col">#</th>
                                <th scope="col">Nombre de la Actividad</th>
                                <th scope="col">Fecha de Inicio</th>
                                <th scope="col">Fecha de Fin</th>
                                <th scope="col">Nombre del Plan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in list_actividades)
                            {
                                count = count + 1;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.act_desa_nombre</td>
                                    <td>@item.act_desa_fecha_inicio.ToString("yyyy-MM-dd")</td>
                                    <td>@item.act_desa_fecha_fin.ToString("yyyy-MM-dd")</td>
                                    <td>@item.plan_nombre</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row ml-3">
        <div class="col-sm-4 col-md-4 col-12 pagedList" data-exp-target="#tableExp">
            @Html.PagedListPager(list_actividades, page => Url.Action("Visualizar_Actividades", "Administrador", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
        </div>
    </div>
</div>

