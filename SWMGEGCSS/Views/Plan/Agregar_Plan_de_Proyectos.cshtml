@model SWMGEGCSS.Models.GestionarPlanProyectoViewModel
@{
    ViewBag.Title = "Agregar_Plan_de_Proyectos";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        <div class="row mt-2 pl-2">
            <div class="col-12 col-sm-4 col-md-4 tam">
                <label class="font-weight-bolder">
                    Nombre del Plan del Proyecto
                </label>
                @Html.EditorFor(model => model.plans.plan_nombre, new
                    {
                        htmlAttributes = new { @id = "plan-nombre", @class = "text-center form-control" }
                    })
                <div id="error-plan-nombre" class="errordiv"></div>
            </div>
        </div>
        <div class="row mt-2 pl-2">
            <div class="col-12 col-sm-4 col-md-4">
                <div>
                    <label class="font-weight-bolder">
                        Fecha del Plan del Proyecto
                    </label>
                </div>
                @Html.EditorFor(model => model.plans.plan_fecha, new
                {
                   htmlAttributes = new { @id = "plan-fecha", @class = "text-center form-control", @type = "date" }
                })
                <div id="error-plan-fecha" class="errordiv"></div>
            </div>
        </div>
        <div class="row mt-2 pl-2">
            <div class="col-12 col-sm-4 col-md-4">
                <div>
                    <label class="font-weight-bolder">
                        Codigo de empresa
                    </label>
                </div>
                @Html.EditorFor(model => model.plans.emp_id, new
                {
                   htmlAttributes = new { @class = "text-center form-control" }
                })
            </div>
        </div>
        <div class="row mt-2 pl-2">
            <div class="col-12 col-sm-4 col-md-4">
                <div>
                    <label class="font-weight-bolder">
                        Costo del plan
                    </label>
                </div>
                @Html.EditorFor(model => model.plans.plan_costo, new
               {
                   htmlAttributes = new { @id = "plan-costo", @class = "text-center form-control" }
               })
                <div id="error-plan-costo" class="errordiv"></div>
            </div>
        </div>
        <div class="row mt-2 pl-2">
            <div class="col-12 col-sm-4 col-md-4">
                <div>
                    <label class="font-weight-bolder">
                        Tipo de servicio del plan
                    </label>
                </div>
                @Html.EditorFor(model => model.plans.tipo_servicio_id, new
                {
                   htmlAttributes = new { @class = "text-center form-control" }
                })
            </div>
        </div>
        <div class="row mt-2 pl-2">
            <div class="col-12 col-sm-4 col-md-4">
                <div>
                    <label class="font-weight-bolder">
                        Tiempo del plan (en años)
                    </label>
                </div>
                @Html.EditorFor(model => model.plans.plan_tiempo, new
               {
                   htmlAttributes = new { @id = "plan-tiempo", @class = "text-center form-control" }
               })
                <div id="error-plan-tiempo" class="errordiv"></div>
            </div>
        </div>
        <div id="errordiv"></div>
        <div class="row mt-4 pl-2">
            <div class="col-12 col-sm-3 col-md-3">
                <button type="submit" class="btn btn-success" id="boton-Registrar">
                    <i class="fa fa-check-circle"></i>
                    Registrar Plan
                </button>
            </div>
            <div class="col-12 col-sm-3 col-md-3">
                <a href="@Url.Action("Gestionar_Plan_Proyecto","Gerente")" class="btn btn-secondary">
                    <i class="fa fa-backward">

                    </i>
                    Regresar
                </a>
            </div>
        </div>
    }
</div>
<link href="~/Content/StyleTP/PIERO/stylesPiero.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Scripts/Scripts_TP/PIERO/scriptsGestionarPlan.js"></script>
}
