@model SWMGEGCSS.Models.GestionarPlanProyectoViewModel

@{
    ViewBag.Title = "ACTIVIDAD PLANIFICADA AUX";
    //var tipoServicioCostoSugerido = Model.tipo_servicio_act.costo;
    //var costototal = Model.ActividadesModel.Actividades.act_plazo;
    //Layout = null;

    var nombre = (string)Session["nombreActividad"];
}

<div class="modal fade" id="RegistrarActPlan" tabindex="-1" role="dialog" aria-labelledby="#RegistrarActPlan" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="text-center font-weight-bolder">
                Agregar a la Planificacion
            </div>
            <div class="modal-body">
                <div class="row mt-2 pl-2">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                                Nombre de la Actividad Planificada
                            </label>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.Actividades_planeadas_aux.act_plan_nombre, new
                       {
                           htmlAttributes = new { @class = "text-center form-control bg-white", @id = "ActPlanNombre1",
                               @Value = nombre, @readonly = "readonly"
                           }
                       })
                        </div>
                        <div id="error_act_plan_nombre1" class="errordiv"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                                Descripcion de la Actividad Planificada
                            </label>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.Actividades_planeadas_aux.act_plan_descripcion, new
                       {
                           htmlAttributes = new { @class = "text-center form-control bg-white" , @id = "ActPlanDescripcion1" }
                       })
                        </div>
                        <div id="error_act_plan_descripcion1" class="errordiv"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="row mt-2 pl-2">
                            &nbsp;
                            <div>
                                <label class="font-weight-bolder">
                                    Costo
                                </label>
                            </div>
                            &nbsp;&nbsp;
                            <div>
                                <label style="border: 1px solid #C00">
                                    <Font size="1" color="red">
                                        Precio Sugerido: S/.
                                        <label id = "precioSugerido">
                                            @Html.DisplayFor(model => model.tipo_servicio_act.costo, new
                                    {

                                   htmlAttributes = new
                                   {
                                            //@id = "precioSugerido",
                                            @class = "text-center",
                                            @type = "label",
                                            @color = "red"
                                        }
                                    })
                                        </label>
                                       
                                    </Font>
                                </label>
                            </div>&nbsp;
                        </div>
                                <div>
                                    @Html.EditorFor(model => model.Actividades_planeadas_aux.act_plan_costo, new
                               {
                                   htmlAttributes = new { @class = "text-center form-control bg-white", @id = "ActPlanCosto1" }
                               })
                                </div>
                                <div id="error_act_plan_costo1" class="errordiv"></div>
                            </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class=" row mt-2 pl-2">
                            <div>
                                <label class="font-weight-bolder">
                                    Duracion de la Actividad (En Dias)
                                </label>
                            </div>
                            &nbsp;&nbsp;
                            
                        </div>
                        <div>
                            @Html.EditorFor(model => model.Actividades_planeadas_aux.act_plan_tiempo, new
                        {
                            htmlAttributes = new { @class = "text-center form-control bg-white", @id = "ActPlanTiempo1", @min = "1" }
                        })
                        </div>
                        <div id="error_act_plan_tiempo1" class="errordiv"></div>
                    </div>
                </div>

                <div class="mt-4 mb-4">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-6">
                            <button type="button" class="btn btn-danger rounded-pill btnRegistrarPlanAct" data-backdrop="false" style="color:white !important">
                                <i class="fa fa-times-circle" style="color:white !important"></i>
                                REGISTRAR 
                            </button> 
                        </div>
                        <div class="col-sm-6 col-md-6 col-6">
                            <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal" data-backdrop="false">
                                <i class="fa fa-arrow-left"></i>
                                CANCELAR
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


