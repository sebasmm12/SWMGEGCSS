@model SWMGEGCSS.Models.TipoServicioViewModel
@{ 
    Layout = null;
}
    <div class="modal fade" id="ModalEliminarServicio" tabindex="-1" role="dialog" aria-labelledby="#ModalEliminarProyecto" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="text-center font-weight-bolder mt-1">
                    Eliminar Servicio
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6 col-12 col-md-6">
                            <div class="mt-2">
                                <label class="font-weight-bolder">
                                    Nombre del Servicio
                                </label>
                            </div>
                            <div>
                                @Html.EditorFor(model => model.tipoServicio.tipo_servicio_nombre, new
                                {
                                    htmlAttributes = new { @class = "text-center form-control bg-white", @readonly = "readonly" }
                                })
                            </div>
                        </div>
                        <div class="col-sm-6 col-12 col-md-6">
                            <div class="mt-2">
                                <label class="font-weight-bolder">
                                   Descripcion del Servicio
                                </label>
                            </div>
                            <div>
                                @Html.TextAreaFor(model => model.tipoServicio.tipo_servicio_descripcion, htmlAttributes : new { @class = "text-center form-control bg-white", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-12 col-md-12">
                             @Html.Partial("_ListarActividadesEliminar",Model)
                        </div>
                    </div>
                    <div class="mt-4 mb-4">
                        <div class="row">
                            <div class="col-sm-4 col-md-4 col-12">
                                <button type="button" class="btn btn-danger rounded-pill btnRegistrar" style="color:white !important" data-id-act="@Model.tipoServicio.tipo_servicio_id">
                                    <i class="fa fa-times-circle" style="color:white !important"></i>
                                    Eliminar Servicio
                                </button>
                            </div>
                            <div class="col-sm-4 col-md-4 col-12">
                                <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal">
                                    <i class="fa fa-arrow-left"></i>
                                    Cancelar
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
