@model SWMGEGCSS.Models.TipoServicioViewModel
@{
    Layout = null;
}
<div class="modal fade" id="ModalAgregarActividad" tabindex="-1" role="dialog" aria-labelledby="#ModalEliminarProyecto" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:900px !important">
        <div class="modal-content">
            <div class="text-center font-weight-bolder mt-1">
               Modificar Datos del Proyecto
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                                Nombre de la Actividad
                            </label>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.actividades.act_nombre, new
                            {
                                htmlAttributes = new { @class = "text-center form-control bg-white", @readonly = "readonly" }
                            })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                                Descripción
                            </label>
                        </div>
                        <div>
                            @Html.TextAreaFor(model => model.actividades.act_descripcion, 
                       
                          htmlAttributes : new { @class = "text-center form-control bg-white", @readonly = "readonly" }
                       )
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                                Costo del Servicio
                            </label>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.actividades.costo, new
                            {
                                htmlAttributes = new { @class = "text-center form-control bg-white" }
                            })
                        </div>
                        <span id="validatecostoActividad"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                              Obligatorio
                            </label>
                        </div>
                        <div>
                            <select class="custom-select text-center" id="est_actividad" name="est_actividad">
                                <option value="true">Sí</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mt-4 mb-4">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-6">
                            <button type="button" class="btn btn-success rounded-pill btnRegistrar" style="color:white !important" data-id-act="@Model.actividades.act_id">
                                <i class="fa fa-check-circle" style="color:white !important"></i>
                                 Registrar Actividad
                            </button>
                        </div>
                        <div class="col-sm-6 col-md-6 col-6">
                            <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal">
                                <i class="fa fa-arrow-left"></i>
                                Cancelar
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

