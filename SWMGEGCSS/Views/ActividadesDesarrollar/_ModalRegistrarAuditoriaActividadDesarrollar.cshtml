                <div class="row mt-2 pl-2">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                                Fecha de Inicio de la Actividad
                            </label>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.actividadesDesarrollarAux.act_desa_fecha_inicio, new
                       {
                           htmlAttributes = new { @class = "text-center form-control bg-white" , @readonly = "readonly"}
                       })
                        </div>
                    </div>
                </div>
                <div class="row mt-2 pl-2">
                    <div class="col-sm-12 col-12 col-md-12">
                        <div class="mt-2">
                            <label class="font-weight-bolder">
                                Fecha de Finalizacion
                            </label>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.actividadesDesarrollarAux.act_desa_fecha_fin, new
                       {
                           htmlAttributes = new { @class = "text-center form-control bg-white" , @readonly = "readonly"}
                       })
                        </div>
                    </div>
                </div>

                <div class="mt-4 mb-4">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-6">
                            <button type="button" class="btn btn-danger rounded-pill btnRegistrarActDesa" style="color:white !important">
                                <i class="fa fa-times-circle" style="color:white !important"></i>
                                CONTINUAR
                            </button>
                        </div>
                        <div class="col-sm-6 col-md-6 col-6">
                            <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal">
                                <i class="fa fa-arrow-left"></i>
                                CANCELAR
                            </button>
                        </div>
                    </div>
                </div>
                </div>
            </div>
    </div>
</div>

