@model SWMGEGCSS.Models.GestionarCuentasViewModel
@{
    ViewBag.Title = "Actualizar_Datos";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
    var codigo = 0;
    
    codigo = Model.cuentas.usu_codigo;
    
}

<link rel="stylesheet" href="~/Content/StyleTP/SEBASTIAN/RegistrarProyecto.css" />
@section Scripts{

}

<h2 class="pl-3 ml-3 mt-3 mb-3">Actualizar Empresa</h2>

<div class="container-fluid">
    @using (Html.BeginForm("Actualizar_Datos", "Cuentas", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div>
            <img src="@Url.Action("convertirImagen","Cuentas",new {codigo=codigo })" class="img-radius" alt="User-Profile-Image">

        </div>
        <div class="row mt-3 pl-3">
            <div class="col-12 col-sm-6 col-md-6">
                <label class="font-weight-bolder">
                    Nombre y Apellido
                </label>
                @Html.EditorFor(model => model.cuentas.det_usu_nombre, new
               {
                   htmlAttributes = new { @id = "det_usu_nombre", @class = "text-center form-control", @readonly = "readonly" }
               })
            </div>
            <div class="col-12 col-sm-6 col-md-6">
                <label class="font-weight-bolder">
                    Tipo de Usuario
                </label>
                <select class="custom-select" id="rol_codigo" name="rol_codigo">
                    <option class="font-weight-bolder" value="Elige una opcion">Elija una opción</option>
                    <option class="font-weight-bolder" value="4">Administrador</option>
                    <option class="font-weight-bolder" value="2">Secretario</option>
                    <option class="font-weight-bolder" value="1">Trabajador</option>
                </select>
            </div>
        </div>

        <div class="row mt-3 pl-3">
            <div class="col-12 col-sm-6 col-md-6">
                <label class="font-weight-bolder">
                    Nombre de Usuario
                </label>
                @Html.EditorFor(model => model.cuentas.usu_usuario, new
                {
                   htmlAttributes = new { @id = "usu_usuario", @class = "text-center form-control" }
                })
            </div>
            <div class="col-12 col-sm-6 col-md-6">
                <label class="font-weight-bolder">
                    Contraseña
                </label>
                @Html.EditorFor(model => model.cuentas.usu_contraseña, new
                {
                   htmlAttributes = new { @id = "usu_contraseña", @class = "text-center form-control" }
                })
            </div>
        </div>
        <div class="mt-5 pl-3">
            <label>Agregar Imagen</label>
        </div>
        <div class="mt-3 pl-3">
            <input type="file" class="form-control-file col-12 col-sm-12 col-md-6" id="imagen" name="imagen" />
        </div>

        <div class="row mt-3 ml-2">
            <div class="col-12 col-sm-3 col-md-3">
                <a href="@Url.Action("Gestionar_Cuenta", "Gerente")" class="btn btn-secondary">
                    <i class="fa fa-backward">

                    </i>
                    Regresar
                </a>
            </div>
            <div class="col-12 col-sm-3 col-md-3">
                <button type="submit" class="btn btn-success" id="boton-Registrar">
                    <i class="fa fa-check-circle"></i>
                    Registrar Cuenta
                </button>
            </div>

        </div>

    }
</div>
