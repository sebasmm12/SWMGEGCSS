@model SWMGEGCSS.Models.EvaluarFormularioViewModel
@{
    ViewBag.Title = "Revisar_Formulario";
    Layout = "~/Views/Shared/_LayoutEmpresa.cshtml";
}



<link rel="stylesheet" href="~/Content/StyleTP/SEBASTIAN/RegistrarProyecto.css" />
<div class="container-fluid">
    <form id="form">
        @Html.HiddenFor(model => model.actividades_desarrollarGerente.act_desa_id,
             htmlAttributes: new { @id = "act_desa_id" })
        @Html.HiddenFor(model => model.actividades_desarrollarGerente.act_desa_descripcion,
             htmlAttributes: new { @id = "act_desa_descripcion" })
        @Html.HiddenFor(model => model.actividades_desarrollarGerente.est_act_id, new
   {
       htmlAttributes = new { @id = "est_act_id"}
   })
        <br />
        <div class="row">
            <div class="col-4 col-sm-3 col-md-3 text-center">
                <div class="row text-center">
                    <label class="font-weight-bolder">
                        Fecha Inicio:
                    </label>
                </div>
                <div class="row text-center">
                    @Html.TextBoxFor(model => model.actividades_desarrollarGerente.act_desa_fecha_inicio, "{0:yyyy-MM-dd}",
              new { type = "date" , @class = "datepicker bg-white   text - center form - control", @id = "act_desa_fecha_inicio", @readonly = "readonly" })

                </div>
            </div>
            <div class="col-4 col-sm-3 col-md-3 text-center">
                <div class="row text-center">
                    <label class="font-weight-bolder text-center">
                        Fecha Fin:
                    </label>
                </div>
                <div class="row">
                    <input type="date" id="auxfin" class="datepicker text-center form-control" />
                </div>
            </div>
            <div class="col-4 col-sm-3 col-md-3 text-center">
                <div class="row text-center">
                    <label class="font-weight-bolder">
                        Fecha Entregado:
                    </label>
                </div>
                <div class="row">
                    @Html.TextBoxFor(model => model.actividades_desarrollarGerente.act_desa_fecha_finalizada, "{0:yyyy-MM-dd}",
                  new { type = "date" , @class = "datepicker bg-white  text-center form-control", @id ="act_desa_fecha_finalizada", @readonly = "readonly" })
                </div>
            </div>


        </div>
        <br />
        <div class="row">
            <div class="col-6 col-sm-3 col-md-3 text-center">
                <div>
                    <label class="font-weight-bolder text-center">
                        Empresa:
                    </label>
                </div>
                @Html.TextAreaFor(model => model.actividades_desarrollarGerente.emp_razon_social,
                 htmlAttributes: new { @id = "emp_razon_social", @class = "text-center form-control bg-white", @readonly = "readonly" })
            </div>
            <div class="col-6 col-sm-3 col-md-3 text-center">
                <div>
                    <label class="font-weight-bolder text-center">
                        Nombre actividad:
                    </label>
                </div>
                @Html.TextAreaFor(model => model.actividades_desarrollarGerente.act_desa_nombre,
                 htmlAttributes: new { @id = "act_desa_nombre", @class = "text-center form-control bg-white", @readonly = "readonly" })
            </div>
        </div>
        <div class="col-12 col-sm-10 col-md-10">
            <div>
                <label class="font-weight-bolder">
                    Comentario:
                </label>
            </div>
            @Html.TextAreaFor(model => model.actividades_desarrollarGerente.act_desa_comentario,
             htmlAttributes: new { @id = "actividad_comentario", @class = "text-center form-control bg-white", @readonly = "readonly" })

        </div>


        <div class="col-12 col-sm-10 col-md-10">
            <div>
                <label class="font-weight-bolder">
                    Observacion:
                </label>
            </div>

            @Html.TextAreaFor(model => model.actividades_desarrollarGerente.act_desa_revisor_obs,
             htmlAttributes: new { @id = "act_desa_revisor_obs", @class = "text-center form-control bg-white"})

            <div id="error_act_desa_revisor_obs" class="errordiv"></div>
        </div>

        <br />

        <div class="row">
            <div class="col-6 col-sm-3 col-md-3">
                <div class="row">
                    <label class="font-weight-bolder">
                        Archivo:
                    </label>
                    @Html.LabelFor(model => model.actividades_desarrollarGerente.act_desa_archivo_nombre)
                    @Html.HiddenFor(model => model.actividades_desarrollarGerente.act_desa_archivo_nombre,
                 htmlAttributes: new { @id = "act_desa_archivo_nombre" })

                </div>
                <div class="row">
                    <a href="@Url.Action("DescargarArchivo", "EvaluarFormulario")"
                       target="_blank"
                       class="button Secondary">
                        Descargar
                    </a>
                </div>
            </div>

            <div class="col-6 col-sm-3 col-md-3">
                <div class="row">
                    <label class="font-weight-bolder">
                        Nueva Fecha Fin:
                    </label>
                </div>

                <div class="row">
                    @Html.TextBoxFor(model => model.actividades_desarrollarGerente.act_desa_fecha_fin, "{0:yyyy-MM-dd}",
                   new { type = "date" , @class = "datepicker bg-white text-center form-control", @id = "act_desa_fecha_fin" })
                </div>
            </div>

        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-4 col-sm-3 col-md-3">

                <button type="submit" class="btn btn-success" id="guardar">
                    <i class="fa fa-check-circle"></i>
                    Corregir
                </button>
            </div>

            <div class="col-4 col-sm-3 col-md-3">
                <button type="submit" class="btn btn-success" id="corregir">
                    <i class="fa fa-check-circle"></i>
                    Guardar
                </button>
            </div>

            <div class="col-4 col-sm-3 col-md-3">
                <a href="@Url.Action("Index", "EvaluarFormulario")" class="btn btn-secondary">
                    <i class="fa fa-backward"></i>
                    Regresar
                </a>
            </div>
        </div>

    </form>
</div>

<link rel="stylesheet" href="~/Content/StyleTP/SEBASTIAN/RegistrarProyecto.css" />
@section Scripts{
    <script src="~/Scripts/Scripts_TP/EGG/scripteEvaluarFormulario.js"></script>
    <script src="~/Scripts/sweetalert/sweetalert.js"></script>
}
